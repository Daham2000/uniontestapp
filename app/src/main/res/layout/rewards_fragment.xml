<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RewardsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="300dp">

                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/carouselView"
                        android:layout_width="match_parent"
                        android:background="@drawable/roundedbutton"
                        android:layout_height="300dp"
                        android:elevation="0dp"
                        android:fillColor="#FFFFFFFF"
                        android:minWidth="20dp"
                        app:strokeColor="#7AFFFFFF"
                        app:pageColor="#7AFFFFFF"
                        android:radius="6dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:elevation="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardElevation="5dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="110dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardCornerRadius="75dp">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        app:cornerRadius="25dp"
                        android:id="@+id/btnAll"
                        android:layout_margin="15dp"
                        android:textAllCaps="false"
                        android:shape="ring"
                        android:shadowColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:translationZ="0dp"
                        android:padding="1dp"
                        android:textColor="@color/yellow_text_btn"
                        android:backgroundTint="@color/purple_400"
                        android:layout_marginVertical="5dp"
                        android:layout_width="110dp"
                        android:layout_height="37dp"
                        android:text="All"/>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        app:cornerRadius="25dp"
                        android:id="@+id/btnGoal"
                        android:layout_margin="15dp"
                        android:textAllCaps="false"
                        android:shape="ring"
                        android:shadowColor="@color/white"
                        android:layout_gravity="center"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:padding="1dp"
                        android:translationZ="0dp"
                        android:textColor="@color/btnText"
                        android:backgroundTint="@color/white"
                        android:layout_width="110dp"
                        android:layout_height="37dp"
                        android:text="Goal"/>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                        app:cornerRadius="25dp"
                        android:id="@+id/btnPartner"
                        android:textAllCaps="false"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:shape="ring"
                        android:layout_marginVertical="5dp"
                        android:shadowColor="@color/white"
                        android:layout_gravity="right"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:padding="1dp"
                        android:translationZ="0dp"
                        android:textColor="@color/btnText"
                        android:backgroundTint="@color/white"
                        android:layout_width="110dp"
                        android:layout_height="37dp"
                        android:text="Partner"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="@string/completed_rewards"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewId1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="@string/completed_rewards"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewId2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

        </ScrollView>

</FrameLayout>