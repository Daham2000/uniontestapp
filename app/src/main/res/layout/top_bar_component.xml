<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/slideCompo"
        android:orientation="vertical">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:lineSpacingMultiplier="0.75"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="44sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/union_assurance"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:fontFamily="@string/appbar_scrolling_view_behavior"
            android:text="@string/insurance_cover_from_union_assurance"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            app:cornerRadius="25dp"
            android:layout_gravity="center"
            android:shadowColor="@color/white"
            android:layout_marginTop="25dp"
            android:stateListAnimator="@null"
            android:elevation="0dp"
            android:translationZ="0dp"
            android:textColor="@color/yellow_text"
            android:backgroundTint="@color/white"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="@string/insurance_cover"/>

    </LinearLayout>
</RelativeLayout>